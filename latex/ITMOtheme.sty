\newcommand{\itmopolygons}[1]{
    \begin{picture}(0,0)
		\put(-32,-153.65){
			\includegraphics[height=\paperheight,width=\paperwidth]{itmo_polygons.pdf}
		}
		\put(-28.3,110){%
			\begin{minipage}[t][\paperheight][c]{\paperwidth}
				\begin{center}
				    \usebeamercolor[fg]{title}{ 
    				    #1
                    }
    	    	\end{center}
			\end{minipage}
		}
    \end{picture}
}


